{
    "manifest_version": 2,
    "name": "Boldify",
    "version": "1.0",
    "description": "Embolden and increase font size of the first three letters of each word on a web page.",
    "icons": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "browser_action": {
      "default_icon": "images/icon.png",
      "default_popup": "popup.html"
    },
    "permissions": [
      "activeTab"
    ],
    "content_scripts": [
      {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ]
  }
  